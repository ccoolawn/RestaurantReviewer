
<%= image_tag @restaurant.image_url %>
<div class="row">
	<div class="col-md-3">
		<h2>
			<%= @restaurant.name %>
		</h2>

		<div class="star-rating" data-score= <%= @avg_rating %> ></div>
		<p><%= "#{@reviews.length} reviews" %></p>
		<p>
			<strong>Address:</strong>
			<%= @restaurant.address %>
		</p>

		<p>
			<strong>Phone:</strong>
			<%= @restaurant.phone %>
		</p>

		<p>
			<strong>Website:</strong>
			<%= link_to @restaurant.website, @restaurant.website %>
		</p>

		<%= link_to 'Write a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary btn-xs" %>
	</div>
	<div class="col-md-9">
		<% if @reviews.blank? %>
			<h3>No reviews yet. Will you be the first?</h3>
		<% else %>
			<table class="table">
				<thead>
					<tr>
						<th class="col-md-3"></th>
						<th class="col-md-9"></th>
					</tr>
				</thead>
				<tbody>
					<% @reviews.each do |review| %>
						<tr>
							<td>
								<h5>
									<%= "#{review.user.first_name.capitalize} #{review.user.last_name.capitalize[0]}." %>
								</h5>
								<p><%= review.created_at.strftime("%-m/%-d/%y") %></p>
							</td>
							<td>
								<div class="star-rating" data-score= <%= review.rating %>></div>
								<p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% end %>
	</div>
</div>

<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-default btn-xs" %> |
<%= link_to 'Back', restaurants_path, class: "btn btn-default btn-xs" %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/raty/2.7.0/jquery.raty.min.js"></script>
<script>
	$('.star-rating').raty({
		path: 'https://cdnjs.cloudflare.com/ajax/libs/raty/2.7.0/images',
		readOnly: true,
		score: function() {
			return $(this).attr('data-score');
		}
	});
</script>
